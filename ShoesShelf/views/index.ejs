            <div class="banner">
                <video class="banner-video" autoplay loop muted>
                    <source src="/assets/video/video-banner.mp4" type="video/mp4">
                </video>
            </div>
        </header>
        <div class="main-content" id="main-content">
            <!-- <button onclick="showImg360()">Show 360 images</button> -->
            <div class="list-posts">
                <% posts.forEach(function (post, k = 0) { %>
                    <div class="post-container">
                        <div class="posts">
                            <div id="slider">
                                <div id="carouselExampleInterval<%= k %>" class="carousel slide" data-ride="carousel" >
                                    <div class="carousel-inner">
                                        <div class="carousel-item active" data-interval="5000">
                                            <img src="/assets/images/userPost/<%= post.image[0].filename %>" class="d-block w-100" alt="...">
                                        </div>
                                        <% for(var i=1 ; i < post.image.length ; i++) {%>
                                        <div class="carousel-item" data-interval="5000">
                                            <img src="/assets/images/userPost/<%= post.image[i].filename %>" class="d-block w-100" alt="...">
                                        </div>
                                        <%}%>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleInterval<%= k %>" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleInterval<%= k++ %>" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                            <div class="post-title">
                                <div class="post-content">
                                    <%- post.status %>
                                </div>
                                <div class="post-hash-tag">
                                    <%= post.hashtag %>
                                </div>
                                <form action="/posts/id" method="POST">
                                    <input value="<%= post._id %>" id="<%= post._id %>" name="id" type="submit" style="display: none;">
                                    <!-- <a href="#id-post" class="read-more">Read more...</a> -->
                                    <label for="<%= post._id %>" class="read-more">Read more...</label>
                                </form>
                            </div>
                        </div>
                        <div class="status">
                            <p class="user-name"></p>
                            <p class="post-time">
                                <%= post.date %>
                            </p>
                        </div>
                    </div>
                <% }) %>
                <div class="post-container">
                    <div class="posts">
                        <div id="slider">
                            <ul class="slides">
                                <li class="slide">
                                    <img src="/assets/images/img360/2DC_3631.jpg" class="post-avatar"></img>
                                </li>
                            </ul>
                        </div>
                        <div class="post-title">
                            <div class="post-content">Lorem ipsum dolor sit amet consectetur adipisicing elit. Laboriosam ab minima, cumque laborum pariatur in tenetur deserunt aliquam consequatur ducimus placeat sint vitae a ipsa dolorum nisi officia, enim dolore. Lorem ipsum dolor sit amet consectetur, adipisicing elit. Quidem eaque cum adipisci similique sequi.</div>
                            <div class="post-hash-tag">#Converse #FullColor</div>
                            <button onclick="showImg360()" class="btn-view-360">Show 360 images</button>
                            <form action="" method="POST">
                                <input value="" id="" name="id" type="submit" style="display: none;">
                                <!-- <a href="#id-post" class="read-more">Read more...</a> -->
                                <label for="" class="read-more">Read more...</label>
                            </form>
                        </div>
                    </div>
                    <div class="status">
                        <p class="user-name"></p>
                        <p class="post-time">3 minuter ago</p>
                    </div>
                </div>
            </div>
            <form action="/" method="GET" class="sort-container">
                <select name="search" class="brands sort-form" id="brands">
                    <option selected hidden style="font-weight: bold;">Brands</option>
                    <option value="vans">Vans</option>
                    <option value="adidas">Adidas</option>
                    <option value="nike">Nike</option>
                    <option value="reebok">Reebok</option>
                    <option value="converse">Converse</option>
                    <option value="puma">Puma</option>
                    <option value="other">Orther</option>
                </select>
                <input type="text" name="collections" placeholder="Collections" class="collections sort-form">
                <input type="text" name="hashtag" placeholder="#HashTag" class="hashtag sort-form">
                <button class="btn-search sort-form" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
        <footer>
            <div class="footer-container">
                <div class="left-col">
                    <div class="social">
